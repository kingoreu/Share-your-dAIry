<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.share.dairy.MoodGraphController"
      spacing="20" alignment="CENTER" style="-fx-padding: 20;">

    <HBox spacing="10" alignment="CENTER">
        <Button text="1주" onAction="#loadWeekData"/>
        <Button text="15일" onAction="#load15DaysData"/>
        <Button text="1달" onAction="#loadMonthData"/>
    </HBox>

    <LineChart fx:id="moodChart" title="감정 그래프"
               legendVisible="false"
               animated="true">
        <xAxis>
            <NumberAxis label="날짜 (일)" />
        </xAxis>
        <yAxis>
            <NumberAxis label="감정 점수 (1~10)" lowerBound="1" upperBound="10" tickUnit="1"/>
        </yAxis>
    </LineChart>
</VBox>
