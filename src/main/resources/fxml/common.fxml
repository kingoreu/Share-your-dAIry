<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import com.share.dairy.ui.SidebarItem?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.share.dairy.controller.CommonController">

    <!-- ── 헤더: 좌 홈버튼 / 가운데 페이지제목 / 아래 구분선 ── -->
    <top>
        <VBox spacing="8" styleClass="app-header-wrap">

            <!-- 가운데 정렬을 정확히 맞추려고 좌/우 폭을 맞춘 BorderPane 사용 -->
            <BorderPane styleClass="app-header">
                <!-- Left: 홈 버튼 -->
                <left>
                    <Button fx:id="homeBtn" focusTraversable="false" styleClass="home-icon">
                        <graphic>
                            <ImageView fx:id="homeIcon" fitWidth="28" fitHeight="28" preserveRatio="true"/>
                        </graphic>
                    </Button>
                </left>

                <!-- Center: 페이지 제목 (Add Friends / Buddy List 등) -->
                <center>
                    <Label fx:id="pageTitle" text="" styleClass="header-title"/>
                </center>

                <!-- Right: 더미 공간(Left와 폭 맞춰서 진짜 중앙 정렬) -->
                <right>
                    <Pane prefWidth="48"/>  <!-- 홈버튼과 대략 같은 폭 -->
                </right>
            </BorderPane>

            <!-- 얇은 구분선(양옆 여백) -->
            <Pane styleClass="app-rule" minHeight="2" prefHeight="2" maxHeight="2">
                <VBox.margin><Insets left="20" right="20"/></VBox.margin>
            </Pane>
        </VBox>
    </top>

    <!-- 좌측 사이드바 -->
    <left>
        <VBox spacing="12" styleClass="sidebar" prefWidth="180">
            <SidebarItem fx:id="myInfoItem"/>
            <SidebarItem fx:id="addFriendsItem"/>
            <SidebarItem fx:id="buddyListItem"/>
        </VBox>
    </left>

    <!-- 중앙 교체 영역 -->
    <center>
        <StackPane fx:id="contentRoot"/>
    </center>

</BorderPane>
