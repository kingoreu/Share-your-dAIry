<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<!-- ADD Friends 화면 -->
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.share.dairy.controller.AddFriendsController"
            stylesheets="@../../css/addfriends.css">


    <!-- 바깥 하얀 카드 -->
    <center>
        <StackPane styleClass="content-card">
            <padding><Insets top="24" right="24" bottom="24" left="24"/></padding>

            <!-- 좌: 프리뷰 / 우: 폼  -->
            <GridPane hgap="40" vgap="20">
                <columnConstraints>
                    <ColumnConstraints percentWidth="45"/>
                    <ColumnConstraints percentWidth="55"/>
                </columnConstraints>

                <!-- 왼쪽: 아바타 프레임 -->
                <StackPane GridPane.columnIndex="0" styleClass="photo-frame">
                    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
                    <ImageView fx:id="avatarView" preserveRatio="true" fitWidth="360" fitHeight="420"/>
                </StackPane>

                <!-- 오른쪽: ID + 버튼 -->
                <VBox GridPane.columnIndex="1" spacing="16" alignment="CENTER_LEFT">
                    <HBox spacing="12" alignment="CENTER_LEFT">
                        <Label text="ID" styleClass="form-label"/>
                        <TextField fx:id="idField" promptText="K.K" prefWidth="300"/>
                    </HBox>

                    <HBox spacing="16">
                        <Button fx:id="searchBtn" text="Search" onAction="#onSearch" styleClass="fl-btn"/>
                        <Button fx:id="addBtn"    text="ADD"    onAction="#onAdd"    styleClass="fl-btn-primary"/>
                    </HBox>
                </VBox>
            </GridPane>
        </StackPane>
    </center>
</BorderPane>
