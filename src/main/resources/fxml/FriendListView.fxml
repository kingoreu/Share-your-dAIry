<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<!-- 친구 리스트 화면 (중앙 카드 + 2열 타일 + 하단 버튼) -->
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.share.dairy.controller.FriendListController"
            stylesheets="@../css/friendlist.css">

    <center>
        <!-- 바깥 하얀 둥근 카드 -->
        <StackPane styleClass="content-card">
            <padding>
                <Insets top="24" right="24" bottom="24" left="24"/>
            </padding>

            <BorderPane>
                <center>
                    <ScrollPane fx:id="scroll" fitToWidth="true"
                                hbarPolicy="NEVER" styleClass="fl-clean-scroll">
                        <!-- ScrollPane의 content 명시 -->
                        <content>
                            <TilePane fx:id="tile" prefColumns="2" hgap="20" vgap="20">
                                <padding>
                                    <Insets top="20" right="20" bottom="20" left="20"/>
                                </padding>
                            </TilePane>
                        </content>
                    </ScrollPane>
                </center>

                <bottom>
                    <HBox alignment="CENTER_RIGHT" spacing="12">
                        <padding>
                            <Insets top="16" right="24" bottom="8" left="24"/>
                        </padding>
                        <Button fx:id="selectBtn" text="Select" disable="true" styleClass="fl-btn"/>
                        <Button fx:id="deleteBtn" text="Delete" disable="true" styleClass="fl-btn-primary"/>
                    </HBox>
                </bottom>
            </BorderPane>
        </StackPane>
    </center>

</BorderPane>
