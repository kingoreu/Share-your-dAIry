<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.share.dairy.controller.MyInfoController"
            stylesheets="@/css/myinfo.css">

    <center>
        <StackPane styleClass="content-card">
            <padding><Insets top="24" right="24" bottom="24" left="24"/></padding>

            <BorderPane>

                <!-- 왼쪽: 아바타 프레임 (폭을 줄여서 폼과 균형) -->
                <left>
                    <StackPane styleClass="photo-frame" prefWidth="360">
                        <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>
                        <ImageView fx:id="avatarView" preserveRatio="true"
                                   fitWidth="260" fitHeight="320"/>
                    </StackPane>
                </left>

                <!-- 중앙: 라벨 + 입력칸 -->
                <center>
                    <GridPane hgap="14" vgap="20" styleClass="form-grid">
                        <!-- 라벨이 '...' 안 뜨게 폭을 넉넉히 -->
                        <columnConstraints>
                            <ColumnConstraints prefWidth="160" minWidth="160" halignment="RIGHT"/>
                            <ColumnConstraints hgrow="ALWAYS" minWidth="360" prefWidth="420"/>
                        </columnConstraints>
                        <!-- 줄 높이도 살짝 줄임 -->
                        <rowConstraints>
                            <RowConstraints minHeight="52"/>
                            <RowConstraints minHeight="52"/>
                            <RowConstraints minHeight="52"/>
                            <RowConstraints minHeight="52"/>
                            <RowConstraints minHeight="52"/>
                        </rowConstraints>

                        <Label text="ID"         GridPane.rowIndex="0" styleClass="field-label"/>
                        <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="0"
                                   promptText="User" prefWidth="420"/>

                        <Label text="password"   GridPane.rowIndex="1" styleClass="field-label"/>
                        <PasswordField fx:id="pwField" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                       promptText="1234" prefWidth="420"/>

                        <Label text="E-mail"     GridPane.rowIndex="2" styleClass="field-label"/>
                        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                                   promptText="Value@.com" prefWidth="420"/>

                        <Label text="Nickname"   GridPane.rowIndex="3" styleClass="field-label"/>
                        <TextField fx:id="nicknameField" GridPane.columnIndex="1" GridPane.rowIndex="3"
                                   promptText="구리구리" prefWidth="420"/>

                        <Label text="Character"  GridPane.rowIndex="4" styleClass="field-label"/>
                        <TextField fx:id="characterField" GridPane.columnIndex="1" GridPane.rowIndex="4"
                                   promptText="Raccoon" prefWidth="420"/>
                    </GridPane>
                </center>

                <!-- 하단: 우하단에 적당히 큰 Edit/Save 버튼 -->
                <bottom>
                    <HBox alignment="CENTER_RIGHT">
                        <padding><Insets top="16" right="8" bottom="0" left="8"/></padding>
                        <Button fx:id="editBtn" text="Edit"
                                onAction="#onEdit"
                                styleClass="fl-btn-primary mi-edit-md"/>
                    </HBox>
                </bottom>

            </BorderPane>
        </StackPane>
    </center>
</BorderPane>
